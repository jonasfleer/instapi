# Reboot
begin
	remote = blackwhite
	button = KEY_CHANNEL
	button = KEY_CHANNELUP
	prog   = irexec
	repeat = 0
	config = shutdown -r now
end

# Shutdown
begin
	remote = blackwhite
	button = KEY_CHANNEL
	button = KEY_CHANNELDOWN
	prog   = irexec
	repeat = 0
	config = shutdown -h now
end



